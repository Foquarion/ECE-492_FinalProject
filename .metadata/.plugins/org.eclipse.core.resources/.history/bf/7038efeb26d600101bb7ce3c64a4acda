#include "macros.h"
#include  "functions.h"
#include  "msp430.h"
#include "ports.h"
#include  "LED.h"


/* *** USAGE NOTES ***
 *
 * P1OUT &= ~RED_LED;       // turn OFF RED led
 * P1OUT |= RED_LED         // turn ON RED led
 *
 * P6OUT &= ~GRN_LED        // turn OFF GRN led
 * P6OUT |= GRN_led         // turn ON GRN led
 */


void Init_LEDs(void){
    LEDS_OFF();
}

void LEDS_OFF(void){
//------------------------------------------------------------------------------
// LED Configurations
//------------------------------------------------------------------------------
// Turns OFF both LEDs
  P4OUT &= ~LED_8;
  P4OUT &= ~LED_9;

  P6OUT  &= ~LED_2;
  P6OUT  &= ~LED_1;
  P6OUT  &= ~LED_3;
  P6OUT  &= ~LED_4;
  P6OUT  &= ~LED_5;
  P6OUT  &= ~LED_6;
  P6OUT  &= ~LED_7;
//------------------------------------------------------------------------------
}


void LEDS_ON(void){
    P4OUT |= LED_8;
    P4OUT |= LED_9;

    P6OUT  |= LED_2;
    P6OUT  |= LED_1;
    P6OUT  |= LED_3;
    P6OUT  |= LED_4;
    P6OUT  |= LED_5;
    P6OUT  |= LED_6;
    P6OUT  |= LED_7;
}


